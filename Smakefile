PROJNAME = xrecord
PKGS = x11 xext libavcodec libavutil OpenCL
WARNINGS += -Wpedantic
CCOPTS += -pthread
LDOPTS += -pthread

OBJS += $(BUILD)/obj/assets.c.o

$(BUILD)/assets.c: $(wildcard assets/*)
	rm -f $@
	for f in assets/*; do xxd -C -i "$$f" >> $@; done

$(BUILD)/obj/assets.c.o: $(BUILD)/assets.c
	$(call runpfx,'(CC)',$(CC) -o $@ -c $< $(CLFAGS))
